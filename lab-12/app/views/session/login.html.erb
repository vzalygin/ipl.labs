<%= bootstrap_form_with url: session_create_url, method: :post, local: true, class: "container vh-100 d-flex flex-column justify-content-center" do |f| %>
    <%= f.text_field :login, required: true %><br>
    <%= f.password_field :password, required: true %><br>
    <br>
    <%= f.submit 'Войти' %>
    <%= link_to 'Зарегистрироваться', new_user_path %>
<% end %>
